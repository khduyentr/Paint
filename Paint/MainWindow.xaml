<Fluent:RibbonWindow x:Class="Paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Fluent="clr-namespace:Fluent;assembly=Fluent"
        xmlns:xctk="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"  

        xmlns:local="clr-namespace:Paint"
        mc:Ignorable="d"
        Title="Paint" Height="700" Width="1250" Loaded="RibbonWindow_Loaded">

    <Fluent:RibbonWindow.Resources>
        <Style x:Key="DisableMouseOver" TargetType="Button">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid Background="{TemplateBinding Background}">
                            <ContentPresenter />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Fluent:RibbonWindow.Resources>
    <StackPanel>
        <Fluent:Ribbon>
            <!--Backstage-->
            <Fluent:Ribbon.Menu>
                <Fluent:ApplicationMenu Header="File">
                    <Fluent:MenuItem Header="New" Name="createNewButton" Click="createNewButton_Click">
                             
                    </Fluent:MenuItem>

                    <Fluent:MenuItem Header="Open" Name="openFileButton" Click="openFileButton_Click">

                    </Fluent:MenuItem>

                    <Fluent:MenuItem Header="Save" Name="saveFileButton" Click="saveFileButton_Click">

                    </Fluent:MenuItem>
                </Fluent:ApplicationMenu>
            </Fluent:Ribbon.Menu>



            <!--Quick access item-->
            
            <Fluent:Ribbon.QuickAccessItems>
                <Fluent:QuickAccessMenuItem Header="Save">
                    <Fluent:Button Icon="Images/save.png"  RenderOptions.BitmapScalingMode="HighQuality"></Fluent:Button>
                </Fluent:QuickAccessMenuItem>

                <Fluent:QuickAccessMenuItem Header="Undo">
                    <Fluent:Button Icon="Images/undo.png" RenderOptions.BitmapScalingMode="HighQuality"></Fluent:Button>
                </Fluent:QuickAccessMenuItem>


                <Fluent:QuickAccessMenuItem Header="Redo">
                    <Fluent:Button Icon="Images/redo.png" RenderOptions.BitmapScalingMode="HighQuality"></Fluent:Button>
                </Fluent:QuickAccessMenuItem>
            </Fluent:Ribbon.QuickAccessItems>

            <!--Tabs-->
            <Fluent:RibbonTabItem Header="Home">
                <!--Clipboard-->
                <Fluent:RibbonGroupBox Header="Clipboard" Width="110">
                    <StackPanel Orientation="Horizontal">
                        <Fluent:Button Name="pasteButton" Header="Paste" Margin="0,10,0,0">
                            <Fluent:Button.LargeIcon>
                                <Image Source="Images/paste.png" RenderOptions.BitmapScalingMode="HighQuality"></Image>
                            </Fluent:Button.LargeIcon>
                        </Fluent:Button>

                        <Fluent:Button Name="cutButton" Header="Cut" Margin="0,10,0,0">
                            <Fluent:Button.LargeIcon>
                                <Image Source="Images/cut.png" Width="30" RenderOptions.BitmapScalingMode="HighQuality"></Image>
                            </Fluent:Button.LargeIcon>
                        </Fluent:Button>
                        <Fluent:Button Name="copyButton" Header="Copy" Margin="0,10,0,0">
                            <Fluent:Button.LargeIcon>
                                <Image Source="Images/copy.png"  RenderOptions.BitmapScalingMode="HighQuality"></Image>
                            </Fluent:Button.LargeIcon>
                        </Fluent:Button>
                    </StackPanel>
                </Fluent:RibbonGroupBox>
                <!--Tools-->
                <Fluent:RibbonGroupBox Header="Tool" Width="85">
                    <StackPanel Orientation="Horizontal" Width="74">
                        
                        <Fluent:Button Name="fillButton" Margin="0,15,0,0" Height="40">
                            <Fluent:Button.LargeIcon>
                                <Image Source="Images/fill.png" Width="30" RenderOptions.BitmapScalingMode="HighQuality"></Image>
                            </Fluent:Button.LargeIcon>
                        </Fluent:Button>

                        <Fluent:Button Name="textButton" Margin="7,15,0,0" Height="40">
                            <Fluent:Button.LargeIcon>
                                <Image Source="Images/text.png" Width="30" RenderOptions.BitmapScalingMode="HighQuality"></Image>
                            </Fluent:Button.LargeIcon>
                        </Fluent:Button>
                    </StackPanel>
                </Fluent:RibbonGroupBox>
                <!--Shapes-->
                <Fluent:RibbonGroupBox Header="Shapes" Width="300">
                    <!--Add shapes' icon here-->
                    <ListBox Width="200" Height="60" Margin="5,5,0,0">
                        
                    </ListBox>
                </Fluent:RibbonGroupBox>
                
                <!--Size-->
                <Fluent:RibbonGroupBox Width="70">
                    <StackPanel Orientation="Vertical" Margin="0,10,0,0" Width="60" HorizontalAlignment="Center">
                        <Image Source="Images/size.png" RenderOptions.BitmapScalingMode="HighQuality" Margin="5"
                               Width="40" HorizontalAlignment="Center"></Image>

                        <Fluent:ComboBox x:Name="sizeComboBox" Height="15" IsEditable="False" HorizontalAlignment="Center">
                            <ComboBoxItem Content="1 px"/>
                            <ComboBoxItem Content="3 px"/>
                            <ComboBoxItem Content="5 px"/>
                        </Fluent:ComboBox>
                    </StackPanel>

                </Fluent:RibbonGroupBox>

                <!--Colors-->
                <Fluent:RibbonGroupBox Header="Colors" Width="320" >
                    <StackPanel Orientation="Horizontal">

                        <Grid Margin="5,0,0,0" Width="40" Height="70">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                                
                            </Grid.RowDefinitions>

                            <Border Grid.Column="0" Grid.Row="0" BorderThickness="1" BorderBrush="Black"
                                                            Width="27" Height="27"/>
                            <Button Background="Blue" Grid.Column="0" Grid.Row="0" Width="25" Height="25"
                                    Style="{StaticResource DisableMouseOver}"></Button>

                            

                            
                        </Grid>



                            <!--<xctk:ColorPicker Name="colorPicker" SelectedColor="{Binding DataColor, UpdateSourceTrigger=PropertyChanged}"
                         DisplayColorAndName="True" UsingAlphaChannel="False" AvailableColorsSortingMode="HueSaturationBrightness"
                                          Width="185" Height="22" SelectedColorChanged="colorPicker_SelectedColorChanged"></xctk:ColorPicker>-->
                        
                        <Grid  Margin="20,5,0,2" Width="200">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>


                                <Border Grid.Column="0" Grid.Row="0" BorderThickness="1" BorderBrush="Black"
                                                            Width="28" Height="28"/>
                                <Button Grid.Column="0" Grid.Row="0" Width="25" Height="25" Style="{StaticResource DisableMouseOver}"
                                        Background="Black"></Button>


                                <Border Grid.Column="1" Grid.Row="0" BorderThickness="1" BorderBrush="Black"
                                                            Width="28" Height="28"/>
                                <Button Grid.Column="1" Grid.Row="0" Width="25" Height="25" Style="{StaticResource DisableMouseOver}"
                                        Background="Gray"></Button>

                                <Border Grid.Column="2" Grid.Row="0" BorderThickness="1" BorderBrush="Black"
                                                        Width="28" Height="28"/>
                                <Button Grid.Column="2" Grid.Row="0" Width="25" Height="25" Style="{StaticResource DisableMouseOver}"
                                        Background="Red"></Button>

                                <Border Grid.Column="3" Grid.Row="0" BorderThickness="1" BorderBrush="Black"
                                                    Width="28" Height="28"/>
                                <Button Grid.Column="3" Grid.Row="0" Width="25" Height="25" Style="{StaticResource DisableMouseOver}"
                                        Background="Orange"></Button>

                                <Border Grid.Column="0" Grid.Row="1" BorderThickness="1" BorderBrush="Black"
                                                Width="28" Height="28"/>
                                <Button Grid.Column="0" Grid.Row="1" Width="25" Height="25" Style="{StaticResource DisableMouseOver}"
                                        Background="Blue"></Button>
                                
                                <Border Grid.Column="1" Grid.Row="1" BorderThickness="1" BorderBrush="Black"
                                                Width="28" Height="28"/>
                                <Button Grid.Column="1" Grid.Row="1" Width="25" Height="25" Style="{StaticResource DisableMouseOver}"
                                        Background="LightBlue"></Button>

                                <Border Grid.Column="2" Grid.Row="1" BorderThickness="1" BorderBrush="Black"
                                            Width="28" Height="28"/>
                                <Button Grid.Column="2" Grid.Row="1" Width="25" Height="25" Style="{StaticResource DisableMouseOver}"
                                                Background="Purple">
                                </Button>

                                <Border Grid.Column="3" Grid.Row="1" BorderThickness="1" BorderBrush="Black"
                                        Width="28" Height="28"/>
                                <Button Grid.Column="3" Grid.Row="1" Width="25" Height="25" Style="{StaticResource DisableMouseOver}"
                                        Background="Pink"></Button>
                            </Grid>

                        <Fluent:Button Name="editColorButton" Header="Edit Colors" Width="60" Click="editColorButton_Click" Margin="0,10,0,0">
                            <Fluent:Button.LargeIcon>
                                <Image Source="Images/color_wheel.png" RenderOptions.BitmapScalingMode="HighQuality"></Image>
                            </Fluent:Button.LargeIcon>
                        </Fluent:Button>



                    </StackPanel>
                    
                </Fluent:RibbonGroupBox>
        
        </Fluent:RibbonTabItem>

            <Fluent:RibbonTabItem Header="View">
                <Fluent:RibbonGroupBox Header="Zoom" Width="100">
                    <StackPanel Orientation="Horizontal">
                        <Fluent:Button Name="zoomInButton" Header="Zoom in" Margin="0,10,0,0">
                            <Fluent:Button.LargeIcon>
                                <Image Source="Images/zoom_in.png" RenderOptions.BitmapScalingMode="HighQuality"></Image>
                            </Fluent:Button.LargeIcon>
                        </Fluent:Button>

                        <Fluent:Button Name="zoomOutButton" Header="Zoom out" Margin="10,10,0,0">
                            <Fluent:Button.LargeIcon>
                                <Image Source="Images/zoom_out.png" RenderOptions.BitmapScalingMode="HighQuality"></Image>
                            </Fluent:Button.LargeIcon>
                        </Fluent:Button>
                    </StackPanel>
                </Fluent:RibbonGroupBox>
            </Fluent:RibbonTabItem>
        </Fluent:Ribbon>

        <!--Drawing area-->

        <Border Background="Transparent" Height="550">

        </Border>

    </StackPanel>
</Fluent:RibbonWindow>
